<resources xmlns:tools="http://schemas.android.com/tools">
    <!--
        PERBAIKAN PENTING:
        Kita MENGUBAH parent menjadi "Theme.AppCompat.Light.NoActionBar"
        agar cocok dengan kode "MainActivity extends AppCompatActivity".
        Jika ini salah, aplikasi pasti langsung crash saat dibuka.
    -->
    <style name="Theme.RestaurantMenuPOS" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Warna Utama (Sesuaikan atau biarkan default) -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Warna Sekunder -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Warna Status Bar -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
</resources>